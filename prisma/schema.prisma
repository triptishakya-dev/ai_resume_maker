generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  password  String
  resumes   ResumeDetails[]  // one-to-many relation to Resume
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model ResumeDetails {
  id             String   @id @default(uuid())
  companyName    String
  jobTitle       String
  jobDescription String
  resumeUrl       String
  userId         String   // foreign key column
  user           User     @relation(fields: [userId], references: [id]) // relation field
  analysisResult Json?    // Stores the AI analysis result

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
